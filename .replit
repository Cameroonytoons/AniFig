modules = ["nodejs-20"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Build Figma Plugin"

[[workflows.workflow]]
name = "Build Figma Plugin"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = """

    mkdir -p build && 
    npx tsc &&
    npx esbuild src/ui.ts --bundle --platform=browser --target=es2019 --outfile=build/ui.js &&
    npx esbuild code.ts --bundle --platform=node --target=es2019 --outfile=build/code.js
    """

[deployment]
run = ["sh", "-c", """

    mkdir -p build && 
    npx tsc &&
    npx esbuild src/ui.ts --bundle --platform=browser --target=es2019 --outfile=build/ui.js &&
    npx esbuild code.ts --bundle --platform=node --target=es2019 --outfile=build/code.js
    """]
