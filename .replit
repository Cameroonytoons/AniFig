modules = ["nodejs-20"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Build Figma Plugin"

[[workflows.workflow]]
name = "Build Figma Plugin"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = """

    echo \"Creating build directory...\" &&
    mkdir -p build &&
    echo \"Running TypeScript compilation...\" &&
    npx tsc --listEmittedFiles &&
    echo \"Building UI bundle...\" &&
    npx esbuild src/ui.ts --bundle --platform=browser --target=es2019 --format=iife --global-name=UI --outfile=build/ui.js --sourcemap --log-level=info &&
    echo \"Building plugin code...\" &&
    npx esbuild code.ts --bundle --platform=node --target=es2019 --outfile=build/code.js --sourcemap --log-level=info &&
    echo \"Build completed successfully\"
    """

[deployment]
run = ["sh", "-c", """

    echo \"Creating build directory...\" &&
    mkdir -p build &&
    echo \"Running TypeScript compilation...\" &&
    npx tsc --listEmittedFiles &&
    echo \"Building UI bundle...\" &&
    npx esbuild src/ui.ts --bundle --platform=browser --target=es2019 --format=iife --global-name=UI --outfile=build/ui.js --sourcemap --log-level=info &&
    echo \"Building plugin code...\" &&
    npx esbuild code.ts --bundle --platform=node --target=es2019 --outfile=build/code.js --sourcemap --log-level=info &&
    echo \"Build completed successfully\"
    """]
