{
  "compilerOptions": {
    "target": "es2019",
    "lib": ["es2019", "dom"],
    "moduleResolution": "node",
    "typeRoots": ["./node_modules/@figma", "./node_modules/@types"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "build",
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "resolveJsonModule": true,
    "noEmit": false,
    "allowJs": true,
    "checkJs": false
  },
  "include": ["code.ts", "src/**/*.ts"],
  "exclude": ["node_modules"]
}